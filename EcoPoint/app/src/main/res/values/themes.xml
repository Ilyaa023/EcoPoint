<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EcoPoint" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_green</item>
        <item name="colorPrimaryVariant">@color/dark_green</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green</item>
        <item name="colorSecondaryVariant">@color/green</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="SelectableItemGreen">
        <item name="colorControlHighlight">@color/dark_green</item>
        <item name="colorPrimaryVariant">@color/green</item>
    </style>

    <style name="GreenButtonStyle">
        <item name="theme">@style/SelectableItemGreen</item>
        <item name="android:background">@drawable/background_button_green</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="GreenButtStyle" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/green</item>
        <item name="android:background">@drawable/background_button_green</item>
    </style>
    <style name="WhiteButtonStyle" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/background_button_white</item>
    </style>

    <style name="BlackRadioButtonStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
    </style>

    <style name="GreenRadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="colorControlNormal">@color/green</item>
        <item name="colorControlActivated">@color/dark_green</item>

        <item name="buttonTint">@color/green</item>
        <item name="android:button" >@drawable/selector_radiobutton_green_dark_green</item>
    </style>

    <style name="Theme.EcoPoint.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.EcoPoint.AppBarOverlay" parent="ThemeOverlay.AppCompat.DayNight.ActionBar">
        <item name="colorPrimary">@color/green</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.EcoPoint.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>